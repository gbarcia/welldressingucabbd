<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Horario">

  <typeAlias alias="horario" type="com.wd.dominio.Horario"/>

  <resultMap id= "MapaHorario" class="horario">
   <result property="id" column="ID" />
   <result property="horaIni" column="HoraInicio" />
   <result property="horaFin" column="HoraFin" />
   <result property="diaIni" column="DiaInicio" />
   <result property="diaFin" column="DiaFin" />   
  </resultMap>
  
  <insert id="agregarNuevoHorario" parameterClass="horario">
      INSERT INTO HORARIO (id,hora_ini,hora_fin,dia_ini,dia_fin)
      VALUES(null,#horaIni#,#horaFin#,#diaIni#,#diaFin#)
  </insert>

  <select id="traerTodosLosHorarios" resultMap="MapaHorario">
      SELECT h.id ID, h.hora_ini HoraInicio, h.hora_fin HoraFin, h.dia_ini DiaInicio,
      h.dia_fin DiaFin
      from horario h;
  </select>
  
  </sqlMap>
